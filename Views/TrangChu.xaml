<Window x:Class="LePhungHa_8991.View.TrangChu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LePhungHa_8991.View"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Title="Trang Chủ - Quản Lý Khách Sạn" Height="800" Width="1400" Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="HỆ THỐNG QUẢN LÝ KHÁCH SẠN" 
                              FontSize="32" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock x:Name="txt_WelcomeText" Text="Chào mừng bạn đến với hệ thống" 
                              FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                    <TextBlock x:Name="txt_DateTime" FontSize="18" 
                              Foreground="White" HorizontalAlignment="Right"/>
                    <Button Content="Đăng Xuất" Click="DangXuat_Click" 
                           Margin="0,10,0,0" Padding="15,8" 
                           Background="#F44336" Foreground="White" 
                           BorderThickness="0" FontSize="14" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Statistics Cards -->
            <WrapPanel Grid.Row="0" Margin="0,0,0,30">
                <Border Background="White" CornerRadius="10" Padding="20" 
                       Margin="0,0,20,0" Width="250">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="🏨" FontSize="40" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txt_TongPhong" Text="0" 
                                  FontSize="36" FontWeight="Bold" 
                                  HorizontalAlignment="Center" Foreground="#2196F3"/>
                        <TextBlock Text="Tổng số phòng" FontSize="16" 
                                  HorizontalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>
                </Border>
                
                <Border Background="White" CornerRadius="10" Padding="20" 
                       Margin="0,0,20,0" Width="250">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="👥" FontSize="40" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txt_TongKhachHang" Text="0" 
                                  FontSize="36" FontWeight="Bold" 
                                  HorizontalAlignment="Center" Foreground="#4CAF50"/>
                        <TextBlock Text="Tổng khách hàng" FontSize="16" 
                                  HorizontalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>
                </Border>
                
                <Border Background="White" CornerRadius="10" Padding="20" 
                       Margin="0,0,20,0" Width="250">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📅" FontSize="40" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txt_TongDatPhong" Text="0" 
                                  FontSize="36" FontWeight="Bold" 
                                  HorizontalAlignment="Center" Foreground="#FF9800"/>
                        <TextBlock Text="Tổng đặt phòng" FontSize="16" 
                                  HorizontalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>
                </Border>
                
                <Border Background="White" CornerRadius="10" Padding="20" Width="250">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="✅" FontSize="40" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txt_PhongTrong" Text="0" 
                                  FontSize="36" FontWeight="Bold" 
                                  HorizontalAlignment="Center" Foreground="#9C27B0"/>
                        <TextBlock Text="Phòng trống" FontSize="16" 
                                  HorizontalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Management Menu -->
            <WrapPanel Grid.Row="1">
                <!-- Quản lý phòng -->
                <Border Background="White" CornerRadius="10" Padding="30" 
                       Margin="0,0,20,20" Width="300" Height="200" Cursor="Hand"
                       MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <Button Click="QuanLyPhong_Click" Background="Transparent" 
                           BorderThickness="0" Cursor="Hand">
                        <StackPanel>
                            <TextBlock Text="🏨" FontSize="60" HorizontalAlignment="Center"/>
                            <TextBlock Text="QUẢN LÝ PHÒNG" FontSize="20" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#2196F3" Margin="0,10,0,0"/>
                            <TextBlock Text="Thêm, sửa, xóa phòng" FontSize="14" 
                                      HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                
                <!-- Quản lý khách hàng -->
                <Border Background="White" CornerRadius="10" Padding="30" 
                       Margin="0,0,20,20" Width="300" Height="200" Cursor="Hand"
                       MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <Button Click="QuanLyKhachHang_Click" Background="Transparent" 
                           BorderThickness="0" Cursor="Hand">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="60" HorizontalAlignment="Center"/>
                            <TextBlock Text="QUẢN LÝ KHÁCH HÀNG" FontSize="20" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#4CAF50" Margin="0,10,0,0"/>
                            <TextBlock Text="Quản lý thông tin khách" FontSize="14" 
                                      HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                
                <!-- Quản lý đặt phòng -->
                <Border Background="White" CornerRadius="10" Padding="30" 
                       Margin="0,0,20,20" Width="300" Height="200" Cursor="Hand"
                       MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <Button Click="QuanLyDatPhong_Click" Background="Transparent" 
                           BorderThickness="0" Cursor="Hand">
                        <StackPanel>
                            <TextBlock Text="📅" FontSize="60" HorizontalAlignment="Center"/>
                            <TextBlock Text="QUẢN LÝ ĐẶT PHÒNG" FontSize="20" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#FF9800" Margin="0,10,0,0"/>
                            <TextBlock Text="Đặt phòng và thanh toán" FontSize="14" 
                                      HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                
                <!-- Quản lý dịch vụ -->
                <Border Background="White" CornerRadius="10" Padding="30" 
                       Margin="0,0,20,20" Width="300" Height="200" Cursor="Hand"
                       MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <Button Click="QuanLyDichVu_Click" Background="Transparent" 
                           BorderThickness="0" Cursor="Hand">
                        <StackPanel>
                            <TextBlock Text="🍽️" FontSize="60" HorizontalAlignment="Center"/>
                            <TextBlock Text="QUẢN LÝ DỊCH VỤ" FontSize="20" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#9C27B0" Margin="0,10,0,0"/>
                            <TextBlock Text="Quản lý dịch vụ khách sạn" FontSize="14" 
                                      HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                
                <!-- Loại phòng -->
                <Border Background="White" CornerRadius="10" Padding="30" 
                       Margin="0,0,20,20" Width="300" Height="200" Cursor="Hand"
                       MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <Button Click="QuanLyLoaiPhong_Click" Background="Transparent" 
                           BorderThickness="0" Cursor="Hand">
                        <StackPanel>
                            <TextBlock Text="🏷️" FontSize="60" HorizontalAlignment="Center"/>
                            <TextBlock Text="LOẠI PHÒNG" FontSize="20" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#F44336" Margin="0,10,0,0"/>
                            <TextBlock Text="Quản lý loại phòng" FontSize="14" 
                                      HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
        </Button>
                </Border>
            </WrapPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#424242" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="© 2025 Hệ Thống Quản Lý Khách Sạn - " 
                          FontSize="14" Foreground="White"/>
                <TextBlock Text="Phát triển bởi Phùng Hà" 
                          FontSize="14" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
