<Window x:Class="LePhungHa_8991.View.QuanLyPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LePhungHa_8991.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Quản Lý Phòng" Height="700" Width="1200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="QUẢN LÝ PHÒNG" FontSize="28" FontWeight="Bold" 
                   Foreground="#2196F3" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Input Form -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Column 1 -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <Label Content="Mã Phòng:" FontWeight="Bold"/>
                    <TextBox x:Name="txt_MaPhong" Height="35" Padding="5" FontSize="14"/>
                    
                    <Label Content="Tên Phòng:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="txt_TenPhong" Height="35" Padding="5" FontSize="14"/>
                </StackPanel>

                <!-- Column 2 -->
                <StackPanel Grid.Column="1" Margin="10,0">
                    <Label Content="Loại Phòng:" FontWeight="Bold"/>
                    <ComboBox x:Name="cbo_LoaiPhong" Height="35" 
                             DisplayMemberPath="TenLoaiPhong" 
                             SelectedValuePath="MaLoaiPhong"
                             SelectionChanged="cbo_LoaiPhong_SelectionChanged"
                             FontSize="14"/>
                    
                    <Label Content="Tầng:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="txt_Tang" Height="35" Padding="5" FontSize="14"/>
                </StackPanel>

                <!-- Column 3 -->
                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <Label Content="Trạng Thái:" FontWeight="Bold"/>
                    <ComboBox x:Name="cbo_TrangThai" Height="35" FontSize="14">
                        <ComboBoxItem Content="Trống" IsSelected="True"/>
                        <ComboBoxItem Content="Đã đặt"/>
                        <ComboBoxItem Content="Đang sử dụng"/>
                        <ComboBoxItem Content="Bảo trì"/>
                    </ComboBox>
                    
                    <Label Content="Ghi Chú:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="txt_GhiChu" Height="35" Padding="5" FontSize="14"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Thêm" Click="Them_Click" Width="100" Height="40" 
                           Margin="5" Background="#4CAF50" Foreground="White" 
                           FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    <Button Content="Sửa" Click="Sua_Click" Width="100" Height="40" 
                           Margin="5" Background="#2196F3" Foreground="White" 
                           FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    <Button Content="Xóa" Click="Xoa_Click" Width="100" Height="40" 
                           Margin="5" Background="#F44336" Foreground="White" 
                           FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    <Button Content="Làm Mới" Click="LamMoi_Click" Width="100" Height="40" 
                           Margin="5" Background="#FF9800" Foreground="White" 
                           FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid and Search -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txt_TimKiem" Width="300" Height="35" 
                        Padding="5" FontSize="14" 
                        Text="Nhập từ khóa tìm kiếm..." 
                        GotFocus="txt_TimKiem_GotFocus"
                        LostFocus="txt_TimKiem_LostFocus"/>
                <Button Content="🔍 Tìm Kiếm" Click="TimKiem_Click" Width="120" Height="35" 
                       Margin="10,0,0,0" Background="#9C27B0" Foreground="White" 
                       FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgv_Phong" Grid.Row="1" 
                     AutoGenerateColumns="False" 
                     IsReadOnly="True"
                     SelectionMode="Single"
                     SelectionChanged="dgv_Phong_SelectionChanged"
                     CanUserAddRows="False"
                     Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã Phòng" Binding="{Binding MaPhong}" Width="100"/>
                    <DataGridTextColumn Header="Tên Phòng" Binding="{Binding TenPhong}" Width="*"/>
                    <DataGridTextColumn Header="Loại Phòng" Binding="{Binding LOAIPHONG.TenLoaiPhong}" Width="150"/>
                    <DataGridTextColumn Header="Tầng" Binding="{Binding Tang}" Width="80"/>
                    <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="120"/>
                    <DataGridTextColumn Header="Ghi Chú" Binding="{Binding GhiChu}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Statistics -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Tổng số phòng: " FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="txt_TongSo" Text="0" FontWeight="Bold" 
                          FontSize="14" Foreground="#2196F3" Margin="5,0"/>
                <TextBlock Text="| Phòng trống: " FontWeight="Bold" 
                          FontSize="14" Margin="20,0,0,0"/>
                <TextBlock x:Name="txt_PhongTrong" Text="0" FontWeight="Bold" 
                          FontSize="14" Foreground="#4CAF50" Margin="5,0"/>
                <TextBlock Text="| Đã đặt: " FontWeight="Bold" 
                          FontSize="14" Margin="20,0,0,0"/>
                <TextBlock x:Name="txt_DaDat" Text="0" FontWeight="Bold" 
                          FontSize="14" Foreground="#FF9800" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
